{
  "name": "@plonegovbr/volto-code-block",
  "version": "2.3.0",
  "description": "Volto add-on providing a code block with syntax highlighting.",
  "main": "src/index.js",
  "license": "MIT",
  "keywords": [
    "volto-addon",
    "volto-block",
    "volto",
    "plone",
    "highlighting",
    "react"
  ],
  "author": "PloneGov-BR",
  "homepage": "https://github.com/plonegovbr/volto-code-block#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:plonegovbr/volto-code-block.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "i18n": "rm -rf build/messages && NODE_ENV=production i18n --addon",
    "dry-release": "release-it --dry-run",
    "release": "release-it",
    "release-major-alpha": "release-it major --preRelease=alpha",
    "release-alpha": "release-it --preRelease=alpha"
  },
  "dependencies": {
    "mermaid": "10.8.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-gist": "1.2.4",
    "highlight.js": "^11.9.0"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plone/scripts": "^3.6.1",
    "release-it": "^17.1.1"
  }
}
